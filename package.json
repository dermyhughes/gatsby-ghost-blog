{
  "name": "dermot-blog",
  "description": "Portfolio site for Dermot Hughes based on Ghost and Astro",
  "version": "3.0.0",
  "license": "MIT",
  "author": "Dermot Hughes",
  "homepage": "https://dermothughes.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dermyhughes/dermot-blog.git"
  },
  "bugs": {
    "url": "https://github.com/dermyhughes/dermot-blog/issues"
  },
  "keywords": [
    "astro",
    "ghost"
  ],
  "main": "n/a",
  "engines": {
    "node": ">=24 <25",
    "npm": ">=10"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "preview:ci": "astro build && astro preview --host 127.0.0.1 --port 4173",
    "check": "astro check",
    "lint": "eslint --no-error-on-unmatched-pattern src/**/*.{js,jsx,ts,tsx,json}",
    "lint:fix": "eslint --fix --no-error-on-unmatched-pattern 'src/**/*.{js,jsx,ts,tsx,json}'",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,astro,css,md,json}' --config ./.prettierrc",
    "test:visual:setup": "playwright install chromium webkit",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots"
  },
  "devDependencies": {
    "@astrojs/react": "^4.4.0",
    "@astrojs/sitemap": "^3.6.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^24.0.0",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.30.0",
    "@typescript-eslint/parser": "^8.30.0",
    "astro": "^5.17.3",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-ghost": "2.16.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "sass": "^1.97.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@tryghost/content-api": "^1.11.20",
    "@tryghost/helpers": "1.1.74",
    "cheerio": "1.0.0-rc.11",
    "lodash": "4.17.23",
    "prismjs": "^1.30.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rough-notation": "^0.5.1",
    "zod": "^3.25.76"
  }
}
