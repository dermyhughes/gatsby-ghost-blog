---
import SocialLinks from '../navigation/SocialLinks.astro';

interface Props {
  title: string;
  descriptionParts: string[];
}

const { title, descriptionParts } = Astro.props;
---

<section class='site-banner' aria-labelledby='site-banner-title'>
  <h1 id='site-banner-title' class='site-banner-title three-d' data-line={title}>
    {title}
  </h1>

  <div class='site-banner-desc'>
    {
      descriptionParts.map((item) => (
        <span class='highlight-container'>{item}.</span>
      ))
    }
  </div>
  <SocialLinks isHome />
</section>

<script is:inline>
  (() => {
    const banner = document.querySelector('.site-banner');

    if (!banner) return;

    const updateTitleBlur = () => {
      const rect = banner.getBoundingClientRect();
      const bannerHeight = rect.height;
      const trigger = -bannerHeight * 0.4;
      let progress = 0;

      if (rect.top < trigger) {
        progress = (trigger - rect.top) / (bannerHeight * 0.5);
        progress = Math.max(0, Math.min(1, progress));
      }

      banner.style.setProperty('--title-blur', progress.toString());
    };

    window.addEventListener('scroll', updateTitleBlur, { passive: true });
    window.addEventListener('resize', updateTitleBlur, { passive: true });
    window.addEventListener('load', updateTitleBlur);
    updateTitleBlur();
  })();
</script>

<style lang='scss'>
@use 'sass:math';

.site-banner {
  display: grid;
  place-content: center;
  padding: 5vw 0;
  text-align: center;
  background-image: url('/images/hexagon.svg');
  background-size: 120%;
  background-repeat: no-repeat;
  background-position: center;
  filter: blur(calc(var(--title-blur, 0) * 20px));
  opacity: calc(1 - var(--title-blur, 0));
  pointer-events: none;
  transform: scale(calc(1 - var(--title-blur, 0) * 0.15));
  transition: filter 0.2s, opacity 0.2s, transform 0.2s;
}

.site-banner :global(.social-container),
.site-banner :global(.social-container a) {
  pointer-events: auto;
}

@keyframes site-banner-fade-in {
  from {
    opacity: 0;
    filter: blur(5px);
  }

  to {
    opacity: 1;
    filter: blur(0);
  }
}

.site-banner-title {
  margin: 0;
  margin-bottom: 2rem;
  padding: 0;
  color: #fff;
  line-height: 1.1em;
  font-family: 'Permanent Marker', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
    Ubuntu, Cantarell, 'Helvetica Neue', sans-serif;
  font-size: 6rem;
  font-size: clamp(2rem, 15vw, 22rem);
  text-transform: uppercase;
  letter-spacing: 0.8rem;
  opacity: 0;
  animation: site-banner-fade-in 2500ms ease-in-out forwards;
}

.three-d {
  display: inline-block;
  position: relative;
  z-index: 0;

  &:before,
  &:after {
    content: attr(data-line);
    position: absolute;
    backface-visibility: hidden;
  }

  &:before {
    color: var(--color-pink);
    top: 0;
    left: 0;
    z-index: -1;
    transform: translate3d(-2px, 0, 0);
    animation: site-banner-shake-before 4s cubic-bezier(0.36, 0.07, 0.19, 0.97) both infinite;
    animation-delay: 0.5s;
  }

  &:after {
    color: var(--color-green);
    top: 0;
    left: 0;
    z-index: -2;
    transform: translate3d(2px, 0, 0);
    animation: site-banner-shake-after 4s cubic-bezier(0.36, 0.07, 0.19, 0.97) both infinite;
    transform: rotate(1deg);
  }
}

@keyframes site-banner-shake-before {
  0% {
    transform: translate3d(-2px, 0, 0);
  }

  2% {
    transform: translate3d(0, 0, 0);
  }

  4% {
    transform: translate3d(2px, 0, 0);
  }

  8% {
    transform: translate3d(-2px, 0, 0);
  }

  70% {
    transform: translate3d(-2px, 0, 0);
  }

  100% {
    transform: translate3d(-2px, 0, 0);
  }
}

@keyframes site-banner-shake-after {
  0% {
    transform: translate3d(2px, 0, 0);
  }

  2% {
    transform: translate3d(0, 0, 0);
  }

  4% {
    transform: translate3d(-2px, 0, 0);
  }

  8% {
    transform: translate3d(2px, 0, 0);
  }

  70% {
    transform: translate3d(2px, 0, 0);
  }

  100% {
    transform: translate3d(2px, 0, 0);
  }
}

.site-banner-desc {
  margin: 5px 0 0;
  padding: 0;
  font-size: 2.4rem;
  font-size: clamp(1.4rem, 12vw, 2.4rem);
  line-height: 1.3em;
  opacity: 0.8;
}

.highlight-container {
  position: relative;
  z-index: 0;
}

.highlight-container {
  display: inline-block;
  margin-right: 0.5rem;
}

.highlight-container:before {
  content: ' ';
  display: block;
  height: 50%;
  width: 100%;
  position: absolute;
  background: var(--color-pink);
  transform: rotate(-2deg);
  top: 25%;
  left: 0;
  padding: 10px 3px 3px 10px;
  animation: site-highlight-reveal 0.5s ease;
  animation-fill-mode: backwards;
  z-index: -1;
}

@keyframes site-highlight-reveal {
  0% {
    background-color: transparent;
    width: 0;
  }

  100% {
    width: 100%;
  }
}

@for $i from 1 through 4 {
  .highlight-container:nth-child(#{$i})::before {
    animation-delay: math.div($i, 2) * 1s;
  }
}

@media (prefers-reduced-motion: reduce) {
  .site-banner {
    transition: none;
  }

  .site-banner-title {
    opacity: 1;
    animation: none;
  }

  .three-d {
    &:before,
    &:after {
      animation: none;
    }
  }

  .highlight-container:before {
    animation: none;
  }
}
</style>
