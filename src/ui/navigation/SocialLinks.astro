---
interface Props {
  isHome?: boolean;
  label?: string;
}

const { isHome = false, label = 'Social links' } = Astro.props;

const socialLinks = [
  {
    href: 'https://github.com/dermyhughes',
    icon: 'github',
    alt: 'GitHub',
  },
  {
    href: 'https://www.linkedin.com/in/dermot-hughes-a96b67b6',
    icon: 'linkedin',
    alt: 'LinkedIn',
  },
];
---

<nav class='social-container' aria-label={label}>
  {
    socialLinks.map((link) => (
      <a
        class={`site-nav-item ${isHome ? 'home' : ''}`}
        href={link.href}
        target='_blank'
        rel='noopener noreferrer'
        aria-label={link.alt}
        title={link.alt}
      >
        <img class='site-nav-icon' src={`/images/icons/${link.icon}.svg`} alt='' aria-hidden='true' />
      </a>
    ))
  }
</nav>

<style is:global lang='scss'>
@use '../styles/navigation-contract' as nav;

@include nav.nav-social-contract;
</style>
